{% macro file(id, src, text, endpoint, path) %}
    {% if ".docx" in src %}
    <i class="mdi mdi-file-word-box text-primary"></i>
    {% elif ".xlsx" in src %}
    <i class="mdi mdi-file-excel-box text-success"></i>
    {% elif ".pdf" in src %}
    <i class="mdi mdi-file-pdf-box text-danger"></i>
    {% else %}
    <i class="mdi mdi-file-document text-primary"></i>
    {% endif %}

    {% if path %}
    <a href="{{ url_for('common.assets', asset_type=endpoint, filename=path + '/' + src) }}"> {{ text }}</a>
    {% else %}
