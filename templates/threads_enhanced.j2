{% extends 'base.j2' %}

{% block title %}
Thread Monitor - Enhanced
{% endblock %}

{% block main_page %}
<div class="container-fluid">
    <!-- Statistics Card -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Thread Statistics</h5>
            <div class="row">
                <div class="col-md-2">
                    <div class="stat-box">
                        <span class="stat-value">{{ stats.total if stats else 0 }}</span>
                        <span class="stat-label">Total Threads</span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="stat-box">
                        <span class="stat-value text-success">{{ stats.running if stats else 0 }}</span>
                        <span class="stat-label">Running</span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="stat-box">
                        <span class="stat-value text-info">{{ stats.with_process if stats else 0 }}</span>
                        <span class="stat-label">With Process</span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="stat-box">
                        <span class="stat-value text-danger">{{ stats.with_error if stats else 0 }}</span>
                        <span class="stat-label">With Errors</span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="stat-box">
                        <span class="stat-value">{{ stats.unique_names if stats else 0 }}</span>
                        <span class="stat-label">Unique Names</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Threads List -->
    {% if threads %}
        {% for thread_name, thread_info in threads.items() %}
        <div class="card mb-3">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        {{ thread_name }}
                        {% if thread_info.running %}
                            <span class="badge badge-success">Running</span>
                        {% else %}
                            <span class="badge badge-secondary">Stopped</span>
                        {% endif %}
                        {% if thread_info.error %}
                            <span class="badge badge-danger">Error</span>
                        {% endif %}
                    </h5>
                    <div>
                        <a href="{{ url_for('threads.thread_detail', thread_name=thread_name) }}" class="btn btn-sm btn-info">Details</a>
                        <form action="{{ url_for('threads.threads') }}" method="POST" style="display:inline;">
                            <input type="hidden" name="{{ thread_name }}" value="">
                            <button class="btn btn-sm btn-danger">Kill</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <strong>Type:</strong> {{ thread_info.type }}
                    </div>
                    <div class="col-md-3">
                        <strong>Progress:</strong> 
                        {% if thread_info.progress == -1 %}
                            No info
                        {% else %}
                            {{ thread_info.progress }}%
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar" role="progressbar" style="width: {{ thread_info.progress }}%"></div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-md-3">
                        <strong>Process:</strong> 
                        {% if thread_info.process_running %}
                            <span class="text-success">Active</span>
                        {% else %}
                            <span class="text-muted">Inactive</span>
                        {% endif %}
                    </div>
                    <div class="col-md-3">
                        <strong>Background:</strong> {{ 'Yes' if thread_info.background else 'No' }}
                    </div>
                </div>
                {% if thread_info.error %}
                <div class="alert alert-danger mt-3 mb-0">
                    <strong>Error:</strong> {{ thread_info.error }}
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    {% else %}
        <div class="card">
            <div class="card-body text-center text-muted">
                <p>No threads currently running</p>
            </div>
        </div>
    {% endif %}
</div>

<style>
.stat-box {
    text-align: center;
    padding: 10px;
}
.stat-value {
    display: block;
    font-size: 2rem;
    font-weight: bold;
}
.stat-label {
    display: block;
    font-size: 0.875rem;
    color: #6c757d;
}
</style>

<script>
// Auto-refresh every 2 seconds
setInterval(function() {
    fetch('{{ url_for("threads.api_threads") }}')
        .then(response => response.json())
        .then(data => {
            // Update statistics
            if (data.stats) {
                // Could update stats here
            }
            
            // Could update thread cards here
            // For now, just reload the page if thread count changed
            if (Object.keys(data.threads).length !== {{ threads|length }}) {
                location.reload();
            }
        });
}, 2000);
</script>
{% endblock %}
